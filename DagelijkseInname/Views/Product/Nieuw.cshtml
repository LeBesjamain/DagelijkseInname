@model DagelijkseInname.Models.ProductModel
@{
    ViewBag.Title = "Nieuw product";
}

<h2>@ViewBag.Title</h2>

@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}

@using (Html.BeginForm("Nieuw", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Maak een nieuw product aan.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Naam, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Naam, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Foto, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="file" id="Foto" name="foto" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.HoeveelheidVetPerGram, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.HoeveelheidVetPerGram, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.HoeveelheidKoolhydratenPerGram, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.HoeveelheidKoolhydratenPerGram, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.HoeveelheidEiwitPerGram, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.HoeveelheidEiwitPerGram, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.HoeveelheidKiloCalorieenPerGram, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.HoeveelheidKiloCalorieenPerGram, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Opslaan" />
        </div>
    </div>
}
@Html.ActionLink("Terug naar producten", "Index")