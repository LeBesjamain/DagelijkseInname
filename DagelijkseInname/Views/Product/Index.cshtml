@model IEnumerable<DagelijkseInname.Models.ProductModel>

@{
    ViewBag.Title = "Producten";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Nieuw product", "Nieuw")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th>
            &nbsp;
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoeveelheidVetPerGram)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoeveelheidEiwitPerGram)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoeveelheidKoolhydratenPerGram)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                <img src="data:image;base64,@System.Convert.ToBase64String(item.Foto)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoeveelheidVetPerGram)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoeveelheidEiwitPerGram)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoeveelheidKoolhydratenPerGram)
            </td>
            <td>
                @Html.ActionLink("Wijzig", "Wijzig", new { productId = item.Id }) |
                @Html.ActionLink("Dagboekentry", "Nieuw", "DagboekEntry", new { productId = item.Id }, null)
            </td>
        </tr>
    }

</table>
